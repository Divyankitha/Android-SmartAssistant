<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <TextView
        android:text="Last Name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="27dp"
        android:id="@+id/textView8"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="User name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Email ID"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lname"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/fname" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/eid"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/lname" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/uname"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/eid" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/uname" />

    <TextView
        android:text="First Name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="51dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/task_display"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fname"
        android:layout_width="185dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="28dp" />

    <TextView
        android:text="Password"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/uname"
        android:layout_alignEnd="@+id/textView6"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="Click here to scan and register!"
        android:layout_height="30dp"
        android:id="@+id/button8"
        android:textColor="#ffff"
        android:background="@color/colorPrimaryDark"
        android:layout_width="250dp"
        android:layout_below="@+id/pass"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="20dp"
        android:onClick="onClickScan"
        android:layout_alignEnd="@+id/pass" />

    <TextView
        android:text="Sign Up Please!"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_display"
        android:layout_marginTop="19dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:id="@+id/button3"
        android:onClick="gotoLogin"
        android:layout_marginTop="17dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"
        android:layout_height="30dp"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/task_display" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/button11"
        android:onClick="finishRegister"
        android:textColor="#ffff"
        android:background="@color/colorPrimaryDark"
        android:layout_marginEnd="35dp"
        android:layout_alignEnd="@+id/button8"
        android:layout_alignBottom="@+id/button3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/sjsu_logo"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/task_display"
        android:layout_toStartOf="@+id/task_display"
        android:layout_marginEnd="11dp" />

</RelativeLayout>